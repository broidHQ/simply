{{!-- Layout --}}
{{!< layout-article }}
<script>
    fbq('track', 'ViewContent', {
    content_ids: '{{title}}',
    content_type: 'blog_post',
    });
</script>
{{!-- Image Container --}}
{{#post}}

{{#contentFor "simply_feature_image"}}
    {{#if feature_image}}
        <figure class="post-image u-block u-marginAuto u-marginTop30 u-maxWidth1000">
            <img src="{{feature_image}}" class="u-block u-marginAuto" alt="{{title}}" data-action="zoom"/>
        </figure>
    {{/if}}
{{/contentFor}}

{{/post}}

{{!-- Article --}}
{{> "article"}}
